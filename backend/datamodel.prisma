type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  image: String
  name: String!
  birth: DateTime!
  playlists: [Playlist!]!
  jam: JamSession @relation(name: "UserOnJoinJam" )
}

type Playlist {
  id: ID! @unique
  name: String!
  owner: User!
  createdAt: DateTime!
  updatedAt: DateTime!
  songs: [Song!]!
}

type Song {
  id: ID! @unique
  name: String!
  source: String!
  icon: String
}

type JamSession {
  id: ID! @unique
  playlist: Playlist
  onlineUser: [User!]!  @relation(name: "UserOnJoinJam")
  currentSong: Song
  currentTime: Int
  status: jamStatus
}

enum jamStatus {
  PAUSE,
  START,
  STOP
}

